# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# LogIn
GET         /login/cuenta                      @controllers.LogInControlador.logInCuenta
GET         /login/facebook/:facebookId        @controllers.LogInControlador.logInFacebook(facebookId)

# Registro
POST        /usuario                           @controllers.LogInControlador.registrarUsuarioCuenta
POST        /usuario/facebook                  @controllers.LogInControlador.registrarUsuarioFacebook
